    <select id="selectQboard" parameterType="int" resultMap="qBoardResultSet">
        SELECT
            QNA_BNO,
            QNA_TITLE,
            M.MEMBER_NO,
            QNA_CONTENT,
            QNA_DATE,
            M.NICKNAME
        FROM QNA_BOARD Q
        JOIN MEMBER M ON(M.MEMBER_NO = Q.MEMBER_NO)
        WHERE Q.STATUS = 'Y' AND QNA_BNO = #{qBno};

    </select>

    <update id="increaseCount" parameterType="int">
        UPDATE QNA_BOARD
        SET COUNT =  COUNT + 1
        WHERE QNA_BNO = #{qBno}
    </update>


</mapper>

