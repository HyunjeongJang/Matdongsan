    <!-- 자치구 이름   -->
    <select id="searchLocalList" resultMap="realEstateRentListResultSet">
        SELECT DISTINCT SGG_NM
        FROM REALESTATE_RENT
        ORDER BY SGG_NM
    </select>

    <!-- 동 이름 -->
    <select id="searchDongList" resultMap="realEstateRentListResultSet">
        SELECT DISTINCT BJDONG_NM
        FROM REALESTATE_RENT
        WHERE SGG_NM = '${sggNm}'
        UNION
        SELECT DISTINCT BJDONG_NM
        FROM REALESTATE_SELL
        WHERE SGG_NM = '${sggNm}'
        ORDER BY BJDONG_NM
    </select>

    <select id="selectFboard" resultMap="selectFboardResultSet">
        SELECT
            FREE_BNO,
            BOARD_AREA,
            BOARD_TITLE
        FROM FREE_BOARD
        WHERE STATUS = 'Y'
            AND BOARD_AREA = '${sggNm}'
        ORDER BY BOARD_DATE DESC
    </select>



</mapper>