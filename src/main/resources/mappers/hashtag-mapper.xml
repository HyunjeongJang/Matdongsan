<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="hashtagMapper">

    <resultMap type="hashtag" id="hashtagResultSet">
        <result column="HASHTAG_ID" property="hashtagId"/>
        <result column="HASHTAG" property="hashTag"/>
    </resultMap>

    <select id="selectHashtagList" resultType="String">
        SELECT DISTINCT TRIM(HASHTAG.HASHTAG)
        FROM HASHTAG
    </select>

    <select id="hashtagListByAdmin" resultType="String">
        SELECT DISTINCT TRIM(RES_HASHTAG.HASHTAG_ID)
        FROM RES_HASHTAG
        JOIN HASHTAG H on RES_HASHTAG.HASHTAG_ID = H.HASHTAG_ID
        WHERE MEMBER_NO = 1
    </select>



</mapper>